    "config": "^3.3.2",
    "fs-extra": "^9.0.1",
    "multer": "^1.4.2",
    "tmp-promise": "^2.0.0",
    "winston": "2"
  },
  "devDependencies": {
    "@coko/lint": "^0.0.2",
    "nodemon": "^2.0.6",
    "standard-version": "^7.1.0"
  },
